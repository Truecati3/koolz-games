rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Games Collection ---
    match /games/{gameId} {
      allow read: if request.auth != null;  // all logged-in users can see games
      allow create, update, delete: if request.auth != null 
        && request.auth.token.email == "snoxnukethe@gmail.com"; // only admin
    }

    // --- Users Collection ---
    match /users/{userId} {
      // Each user can read/write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Admin can manage all users
      allow read, write: if request.auth != null 
        && request.auth.token.email == "snoxnukethe@gmail.com";
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
